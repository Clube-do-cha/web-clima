@page
@model LoginModel

@{
    ViewData["Title"] = "Login de Usuário";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>


    <div class="background-loaded"></div>

    <div class="form-container">
        <h1>@ViewData["Title"]</h1>
        <h2>Acesse a sua conta.</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Campo de Login -->
            <div class="mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Digite seu login" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Campo de Senha -->
            <div class="mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Digite sua senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Lembrar-me -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">Me mantenha logado</label>
            </div>

            <!-- Botão de Login -->
            <button type="submit" class="btn btn-primary">Entrar</button>

            <div class="mt-3">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a><br />
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar um novo usuário</a><br />
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar e-mail de confirmação</a><br />
                </p>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
