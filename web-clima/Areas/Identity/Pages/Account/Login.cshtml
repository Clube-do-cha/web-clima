@page
@model LoginModel

@{
    ViewData["Title"] = "Login de Usuário";
}

<!-- Estilos personalizados -->
<style>
    /* Diminuindo a largura do formulário */
    .col-md-6 {
        max-width: 400px;
    }

    /* Fundo semi-transparente para o card */
    .card-body {
        background: rgba(0, 0, 0, 0.7); /* Fundo semi-transparente */
        backdrop-filter: blur(20px); /* Efeito de desfoque */
        -webkit-backdrop-filter: blur(20px); /* Efeito de desfoque para Safari */
        color: #f9f9f9; /* Branco suave */
        border: 1px solid rgba(255, 255, 255, 0.2); /* Borda branca semi-transparente */
    }

    .btn-primary {
        background-color: #6f42c1;
        border-color: #6f42c1;
        margin: 0 auto; /* Centralizando o botão */
    }

    .btn-primary:hover {
        background-color: #5a2fa8;
        border-color: #5a2fa8;
    }

    .form-control, .form-check-label {
        background-color: transparent;
        color: #f1f1f1; /* Branco suave */
    }

    .text-danger {
        color: #ff6666 !important;
    }

    /* Tornar os links brancos */
    a {
        color: #f1f1f1; /* Branco suave */
    }

    a:hover {
        color: #d1d1d1; /* Branco um pouco mais escuro no hover */
    }


    /* Placeholder cinza por padrão e cinza mais escuro ao focar */
    .form-control::placeholder {
        color: #b0b0b0; /* Cinza claro */
    }

    .form-control:focus::placeholder {
        color: #888888; /* Cinza mais escuro quando o input está em foco */
    }
    
    .form-padding {
        padding: .5vw;
    }

    .bg-purple {
        background-color: #6f42c1; /* Cor roxa */
    }
</style>

<div class="row justify-content-center bg-img">
    <div class="col-md-6">
        <!-- Card envolvendo o formulário -->
        <div class="card border-primary mb-3 ">
            <h1 class="card-header bg-purple text-white card-body text-center">Login</h1>
            <div class="card-body">
                <form id="account" method="post">
                    <h2 class="card-title text-center">Acesse a sua conta.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <!-- Campo de Login -->
                    <div class="mb-3">
                        <input asp-for="Input.Email" class="form-control form-padding" aria-required="true" placeholder="Digite seu login"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Campo de Senha -->
                    <div class="mb-3">
                        <input asp-for="Input.Password" class="form-control form-padding" autocomplete="current-password" aria-required="true" placeholder="Digite sua senha" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Lembrar-me -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Me mantenha logado</label>
                    </div>

                    <!-- Botão de Login -->
                    <div class="d-grid">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Entrar</button>
                    </div>

                    <div class="mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a><br/>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar um novo usuário</a><br/>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar e-mail de confirmação</a><br/>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
