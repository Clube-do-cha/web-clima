@page
@model LoginModel

@{
    ViewData["Title"] = "Login de Usuário";
}

<!-- Estilos personalizados -->
<style>
    body {
        background-image: url('https://www.ultraimagehub.com/wallpapers/tr:flp-false,gx-0.8,gy-1,q-75,rh-3264,rw-5824,th-1080,tw-1920/1242067533750861916.jpeg');
        background-size: cover;
        background-position: center;
        color: #f1f1f1; /* Branco suave */
    }

    /* Diminuindo a largura do formulário */
    .col-md-6 {
        max-width: 400px;
    }

    /* Fundo semi-transparente para o card */
    .card-body {
        background-color: rgba(0, 0, 0, 0.7);
        color: #f1f1f1; /* Branco suave */
    }

    /* Definindo o fundo do botão como azul claro */
    .btn-primary {
        background-color: #5bc0de; /* Azul claro */
        border-color: #5bc0de;
        width: 100px; /* Largura menor do botão */
        margin: 0 auto; /* Centralizando o botão */
    }

        .btn-primary:hover {
            background-color: #4aa7c8; /* Azul claro mais escuro no hover */
            border-color: #4aa7c8;
        }

    .form-control, .form-check-label {
        background-color: transparent;
        color: #f1f1f1; /* Branco suave */
    }

    .form-floating label {
        color: #f1f1f1; /* Branco suave */
    }

    .text-danger {
        color: #ff6666 !important;
    }

    /* Tornar os links brancos */
    a {
        color: #f1f1f1; /* Branco suave */
    }

        a:hover {
            color: #d1d1d1; /* Branco um pouco mais escuro no hover */
        }


    /* Placeholder cinza por padrão e cinza mais escuro ao focar */
    .form-control::placeholder {
        color: #b0b0b0; /* Cinza claro */
    }

    .form-control:focus::placeholder {
        color: #888888; /* Cinza mais escuro quando o input está em foco */
    }

</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Card envolvendo o formulário -->
        <div class="card border-primary mb-3">
            <h1 class="card-header bg-primary text-white text-center">Login</h1>
            <div class="card-body">
                <form id="account" method="post">
                    <h2 class="card-title text-center">Acesse a sua conta.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Campo de Login -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Login" class="form-control" aria-required="true" placeholder="Digite seu login" />
                        <label asp-for="Input.Login">Login</label>
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>

                    <!-- Campo de Senha -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Digite sua senha" />
                        <label asp-for="Input.Password">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Lembrar-me -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Lembrar-me</label>
                    </div>

                    <!-- Botão de Login -->
                    <div class="d-grid">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Entrar</button>
                    </div>

                    <div class="mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar um novo usuário</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de confirmação</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
