@page
@model RegisterModel

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="background-loaded"></div>

    <div class="form-container">
        <h1>@ViewData["Title"]</h1>
        <h2>Crie uma nova conta.</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Nome Completo -->
            <div class="mb-3">
                <input asp-for="Input.FullName" class="form-control" aria-required="true" placeholder="Digite seu nome completo" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Digite seu email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Senha -->
            <div class="mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Digite sua senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirmar Senha -->
            <div class="mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirme sua senha" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Botão de Registro -->
            <div class="d-grid">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Cria um elemento de imagem para pré-carregar o fundo
                var img = new Image();
                img.src = '/assets/background-image.jpeg'; // Caminho para a sua imagem de fundo

                img.onload = function () {
                    // Remove a sobreposição e adiciona a classe para aplicar o fundo real após o carregamento
                    document.querySelector('.overlay').classList.add('hidden');
                    document.querySelector('.background-loaded').classList.add('background-loaded');
                };

                img.onerror = function () {
                    console.error('Erro ao carregar a imagem de fundo.');
                };
            });
        </script>
    }
</body>
</html>
