@page
@model RegisterModel

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<!-- Estilos personalizados -->
<style>
    body {
        color: #f1f1f1; /* Branco suave */
    }

    /* Diminuindo a largura do formulário */
    .col-md-6 {
        max-width: 400px;
    }

    /* Fundo semi-transparente para o card */
    .card-body {
        background-color: rgba(0, 0, 0, 0.7);
        color: #f1f1f1; /* Branco suave */
    }

    /* Definindo o fundo do botão como azul claro */
    .btn-primary {
        background-color: #5bc0de; /* Azul claro */
        border-color: #5bc0de;
        width: 200px; /* Largura do botão */
        margin: 0 auto; /* Centralizando o botão */
    }

        .btn-primary:hover {
            background-color: #4aa7c8; /* Azul claro mais escuro no hover */
            border-color: #4aa7c8;
        }

    /* Estilos do formulário */
    .form-control{
        background-color: transparent;
        color: #f1f1f1; /* Branco suave */
    }

    /* Placeholder cinza por padrão e cinza mais escuro ao focar */
    .form-control::placeholder {
        color: #b0b0b0; /* Cinza claro */
    }

    .form-control:focus::placeholder {
        color: #888888; /* Cinza mais escuro quando o input está em foco */
    }

    .text-danger {
        color: #ff6666 !important;
    }

    /* Tornar os links brancos */
    a {
        color: #f1f1f1; /* Branco suave */
    }

        a:hover {
            color: #d1d1d1; /* Branco um pouco mais escuro no hover */
        }

    .form-padding {
        padding: .5vw;
    }

    .bg-purple {
        background-color: #6f42c1; /* Cor roxa */
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Card envolvendo o formulário -->
        <div class="card border-primary mb-3">
            <h1 class="card-header bg-purple text-white text-center">Cadastro</h1>
            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="card-title text-center">Crie uma nova conta.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Nome Completo -->
                    <div class="mb-3">
                        <input asp-for="Input.FullName" class="form-control form-padding" aria-required="true" placeholder="Digite seu nome completo" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <input asp-for="Input.Email" class="form-control form-padding" aria-required="true" placeholder="Digite seu email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Senha -->
                    <div class="mb-3">
                        <input asp-for="Input.Password" class="form-control form-padding" autocomplete="new-password" aria-required="true" placeholder="Digite sua senha" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirmar Senha -->
                    <div class="mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control form-padding" autocomplete="new-password" aria-required="true" placeholder="Confirme sua senha" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Botão de Registro -->
                    <div class="d-grid">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
