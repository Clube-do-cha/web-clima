@page
@model web_clima.Models.RegisterView
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<!-- Estilos personalizados -->
<style>
    body {
        background-image: url('https://www.ultraimagehub.com/wallpapers/tr:flp-false,gx-0.8,gy-1,q-75,rh-3264,rw-5824,th-1080,tw-1920/1242067533750861916.jpeg');
        background-size: cover;
        background-position: center;
        color: #f1f1f1; /* Branco suave */
    }

    /* Diminuindo a largura do formulário */
    .col-md-6 {
        max-width: 400px;
    }

    /* Fundo semi-transparente para o card */
    .card-body {
        background-color: rgba(0, 0, 0, 0.7);
        color: #f1f1f1; /* Branco suave */
    }

    /* Definindo o fundo do botão como azul claro */
    .btn-primary {
        background-color: #5bc0de; /* Azul claro */
        border-color: #5bc0de;
        width: 200px; /* Largura do botão */
        margin: 0 auto; /* Centralizando o botão */
    }

        .btn-primary:hover {
            background-color: #4aa7c8; /* Azul claro mais escuro no hover */
            border-color: #4aa7c8;
        }

    /* Estilos do formulário */
    .form-control {
        background-color: transparent;
        color: #f1f1f1; /* Branco suave */
    }

    .form-floating label {
        color: #f1f1f1; /* Branco suave */
    }

    /* Placeholder cinza por padrão e cinza mais escuro ao focar */
    .form-control::placeholder {
        color: #b0b0b0; /* Cinza claro */
    }

    .form-control:focus::placeholder {
        color: #888888; /* Cinza mais escuro quando o input está em foco */
    }

    .text-danger {
        color: #ff6666 !important;
    }

    /* Tornar os links brancos */
    a {
        color: #f1f1f1; /* Branco suave */
    }

        a:hover {
            color: #d1d1d1; /* Branco um pouco mais escuro no hover */
        }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Card envolvendo o formulário -->
        <div class="card border-primary mb-3">
            <h1 class="card-header bg-primary text-white text-center">Cadastro</h1>
            <div class="card-body">
                <form id="registerForm" asp-controller="Register" asp-action="Register" method="post">
                    <h2 class="card-title text-center">Crie uma nova conta.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Nome Completo -->
                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control" aria-required="true" placeholder="Digite seu nome completo" />
                        <label asp-for="FullName">Nome Completo</label>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Login -->
                    <div class="form-floating mb-3">
                        <input asp-for="UserLogin" class="form-control" aria-required="true" placeholder="Digite seu login" />
                        <label asp-for="UserLogin">Login</label>
                        <span asp-validation-for="UserLogin" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" aria-required="true" placeholder="Digite seu email" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Senha -->
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Digite sua senha" />
                        <label asp-for="Password">Senha</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirmar Senha -->
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirme sua senha" />
                        <label asp-for="ConfirmPassword">Confirmar Senha</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Cidade -->
                    <div class="form-floating mb-3">
                        <input asp-for="UserCity" class="form-control" aria-required="true" placeholder="Digite sua cidade" />
                        <label asp-for="UserCity">Cidade</label>
                        <span asp-validation-for="UserCity" class="text-danger"></span>
                    </div>

                    <!-- Botão de Registro -->
                    <div class="d-grid">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
